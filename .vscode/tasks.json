{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Tasks build PDS2-team3",
            "command": "/usr/bin/g++",
            "args": [
                "-std=c++20",
                "-g",
                "${workspaceFolder}/src/*.cpp",
                "-I",
                "${workspaceFolder}/include",
                "-I",
                "${workspaceFolder}/third_party",
                "-I",
                "${workspaceFolder}/third_party/sqlite_modern_cpp",
                "-lsqlite3",
                "-o",
                "${workspaceFolder}/main"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}